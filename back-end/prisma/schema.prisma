// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model bundle {
  id String @id @default(uuid())
  name String @unique
  yapps YApp[]
}

model YApp {
  id String @id @default(uuid())
  name String @unique
  originalName String @unique
  logoUrl String
  bundle bundle[]
  isInstalled Boolean
  url String @unique
}
